<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size_40dp" />

            <solid android:color="@color/deep_red"/>

            <stroke android:width="1px" android:color="@color/while_most_color" />


        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size_40dp" />

            <gradient android:endColor="@color/deep_red" android:startColor="@color/light_red" />

            <stroke android:width="1px" android:color="@color/while_most_color" />


        </shape>
    </item>

</selector>