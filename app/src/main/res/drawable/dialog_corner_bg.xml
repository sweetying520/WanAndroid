<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorCard" />
            <!-- 弧度 -->
            <corners android:radius="@dimen/size_06dp" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/size_08dp"
        android:left="@dimen/size_08dp"
        android:right="@dimen/size_08dp"
        android:top="@dimen/size_08dp">
        <!-- 边框宽度 -->
        <shape android:shape="rectangle">
            <solid android:color="@color/colorCard" />
            <corners android:radius="@dimen/size_06dp" />
            <padding
                android:bottom="@dimen/size_08dp"
                android:left="@dimen/size_08dp"
                android:right="@dimen/size_08dp"
                android:top="@dimen/size_08dp" />
        </shape>
    </item>
</layer-list>
