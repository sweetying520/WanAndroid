<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar android:id="@+id/toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorCard"
    android:gravity="center_vertical"
    app:layout_scrollFlags="scroll|enterAlways"
    android:layout_height="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_marginEnd="@dimen/size_12dp"
        android:src="@drawable/selector_arrow_back_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_search"
        android:text="@string/search_event"
        android:textColor="@color/white"
        android:layout_marginEnd="@dimen/size_12dp"
        android:layout_gravity="end"
        android:background="@drawable/ripple_search_bg"
        android:layout_width="@dimen/size_55dp"
        android:gravity="center"
        android:layout_height="@dimen/size_28dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_search"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:paddingStart="@dimen/size_27dp"
            android:paddingEnd="@dimen/size_01dp"
            android:inputType="text"
            android:textColor="@color/title_black"
            android:textSize="@dimen/text_size_14"
            android:layout_marginEnd="@dimen/size_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_hint"
            android:layout_marginStart="@dimen/size_06dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/grey_search"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_search"
            android:text="@string/search_tint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </RelativeLayout>


</android.support.v7.widget.Toolbar>