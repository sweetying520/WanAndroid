<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorCard"
    app:cardElevation="@dimen/size_02dp"
    app:cardCornerRadius="@dimen/size_03dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginStart="@dimen/size_08dp"
    android:layout_marginEnd="@dimen/size_08dp"
    android:layout_marginTop="@dimen/size_12dp"
    android:layout_marginBottom="@dimen/size_12dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="@dimen/size_12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/iv_enter"
            android:contentDescription="@null"
            android:src="@drawable/ic_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginEnd="@dimen/size_06dp"
            android:layout_toStartOf="@+id/iv_enter"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_hierarchy_title"
            tools:text="开发环境"
            android:textColor="@color/comment_text"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_hierarchy_child"
            android:textColor="@color/comment_text"
            android:layout_marginTop="@dimen/size_12dp"
            tools:text="Android Studio相关 gradle 官方发布"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>




</android.support.v7.widget.CardView>