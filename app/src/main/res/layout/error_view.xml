<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/error_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView

        android:id="@+id/tv_error_tip"
        android:lineSpacingMultiplier="1.4"
        android:gravity="center"
        android:text="@string/error_tips"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_s_180dp" />


    <ImageView
        android:contentDescription="@null"
        android:layout_marginBottom="@dimen/size_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_error_tip"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_error" />
    
    <TextView
        android:id="@+id/tv_error_reload"
        android:layout_marginTop="@dimen/size_16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_error_tip"
        android:text="@string/reload"
        android:textColor="@color/tab_bac"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/selector_bg_reload"
        android:layout_width="@dimen/size_s_120dp"
        android:layout_height="@dimen/size_50dp" />
    
    




</RelativeLayout>